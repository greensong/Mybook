<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.book.mytestapplication">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_book"
        android:label="简单小说阅读器"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.book.mytestapplication.MainActivity"
            android:label="简单小说阅读器"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name="com.example.book.mytestapplication.novel.NovelActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.book.mytestapplication.novel.NovelResultActivity"></activity>
        <activity android:name="com.example.book.mytestapplication.novel.NovelSectionChooseActivity"></activity>
        <activity android:name="com.example.book.mytestapplication.novel.NovelReadActivity"></activity>
        <activity android:name="com.example.book.mytestapplication.novel.BookMarkActivity"></activity>
    </application>

</manifest>